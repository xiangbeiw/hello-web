/* pages/join/join.wxss */

page {
  background: #f3f3f3;
}

.banner {
  display: block;
  width: 100%;
  height: 340rpx;
}

.block {
  background: #fff;
  margin-top: 15rpx;
}

.block-title {
  font-size: 34rpx;
  line-height: 1.5;
  position: relative;
  padding: 10rpx 20rpx;
  text-indent: 40rpx;
}

.block-title::after {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  content: '';
  width: 10rpx;
  height: 40rpx;
  background: #2e5e86;
}

.block-desc {
  color: #666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
  display: block;
}
